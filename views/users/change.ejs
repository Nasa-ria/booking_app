<div>
  
    <% if ( typeof message !== 'undefined'){  %>
        <%= message %>
   <% } %>
<div>

<form method="Post"  action="/users/change-password" >
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="forcePassword" value="<%=  typeof forcePassword != 'undefined' ? forcePassword : 0 %>">
<div>
    <label for=""> current password </label>
    <input type="text" name="current_password" placeholder="enter  your current password"><br>
</div>

<div>
    <label for=""> new password </label>
    <input type="text" name="new_password" placeholder="enter  new password"><br>
</div>


<div>
    <label for=""> confirm password </label>
    <input type="text" name="confirm_password" placeholder=" re-enter new  your password"><br>
</div>

<button type="submit">submit</button>
